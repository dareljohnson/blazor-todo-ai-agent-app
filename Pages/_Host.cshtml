@page "/"
@namespace BlazorAiAgentTodo.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <title>AI Agent Todo - Blazor</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="_content/Radzen.Blazor/css/material-base.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css">
    <link href="css/app.css" rel="stylesheet" />
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">ðŸ—™</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script src="_content/Radzen.Blazor/Radzen.Blazor.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/contrib/auto-render.min.js"></script>
    <script src="js/clipboard.js"></script>
    <script>
        window.renderMath = function() {
            // Use requestAnimationFrame to ensure DOM is ready
            requestAnimationFrame(function() {
                setTimeout(function() {
                    try {
                        // Find all elements with math content
                        var mathElements = document.querySelectorAll('.math-content');
                        if (mathElements.length === 0) {
                            console.log('No .math-content elements found');
                            return;
                        }
                        
                        mathElements.forEach(function(element) {
                            // Skip if already processed
                            if (element.classList.contains('katex-rendered')) {
                                return;
                            }
                            
                            renderMathInElement(element, {
                                delimiters: [
                                    {left: '$$', right: '$$', display: true},
                                    {left: '$', right: '$', display: false}
                                ],
                                throwOnError: false,
                                trust: true,
                                strict: false,
                                ignoredTags: ['script', 'noscript', 'style', 'textarea', 'pre', 'code']
                            });
                            
                            element.classList.add('katex-rendered');
                        });
                        
                        console.log('KaTeX rendering complete for', mathElements.length, 'elements');
                    } catch (error) {
                        console.error('Error rendering math:', error);
                    }
                }, 100);
            });
        };
        
        // Auto-render on page load
        document.addEventListener('DOMContentLoaded', function() {
            window.renderMath();
        });
        
        // Also render when Blazor reconnects
        Blazor.defaultReconnectionHandler._reconnectCallback = function() {
            setTimeout(window.renderMath, 500);
        };
    </script>

</body>
</html>
